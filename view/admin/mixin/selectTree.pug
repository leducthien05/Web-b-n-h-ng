mixin selectTree(record, level, parent_ID = "")
    each item in record
        - const prefix = Array(level+ 1).join("-- ")
        option(
            value=item._id
            selected=(item.id === parent_ID ? true : false)
        ) #{prefix}#{item.title}
            if(item.children && item.children.length > 0)
                +selectTree(item.children, level + 1, parent_ID)

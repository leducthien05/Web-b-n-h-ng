extends ../../layout/default.pug
include ../../mixin/statusList.pug
include ../../mixin/search.pug
include ../../mixin/pagination.pug
include ../../mixin/form-change-multi.pug
include ../../mixin/alert.pug
include ../../mixin/tableTree.pug

block main 
    if(role.permisson.includes("accounts_view"))
        h1 Danh sách tài khoản
        
        .card.mb-3
            .card-header Danh sách 
                .card-body 
                    .row 
                        .col-8 
                        .co-4 
                            a(
                                href=`${prefixAdmin}/accounts/create`
                                class="btn btn-outline-success"
                            ) +Thêm mới
                .card-body
                    table(
                        class ="table table-hover table-sm"
                        checkbox-multi
                    ) 
                        thead 
                            tr 
                                th 
                                    input(
                                        type="checkbox"
                                        checkbox-all
                                    )
                                th STT
                                th Hình ảnh
                                th Họ tên 
                                th Phân quyền
                                th Email
                                th Trạng thái
                                th Hành động
                        tbody
                            each item, index in record
                                tr 
                                    td 
                                        input(
                                            type="checkbox"
                                            checkbox
                                        )
                                    td #{index + 1}
                                    td 
                                        img(
                                            src = item.avatar 
                                            alt=item.title
                                            hight= "auto"
                                            width = "100px"
                                        )
                                    td #{item.fullname} 
                                    td #{item.role}
                                    td #{item.email}
                                    td 
                                        if(item.status === "active")
                                            a(href="javascript:;"
                                                class="badge badge-success"
                                                change-status
                                                status = item.status
                                                id = item.id
                                            ) Hoạt động
                                        else 
                                            a(href="javascript:;" 
                                                class="badge badge-danger"
                                                change-status
                                                status = item.status
                                                id = item.id
                                            ) Dừng hoạt động
                                    td 
                                        a(
                                            href=`${prefixAdmin}/accounts/edit/${item.id}`
                                            class="btn btn-warning btn-sm"
                                            id = item.id 
                                            button-update
                                        ) Sửa
                                        a(
                                            href=`${prefixAdmin}/accounts/detail/${item.id}`
                                            class="btn btn-secondary btn-sm"
                                            id = item.id 
                                        ) Chi tiết
                                        button(
                                            class="btn btn-danger btn-sm ml-1"
                                            id = item.id 
                                            button-delete
                                        ) Xóa
                        
        //- +pagination(pagination)
    form(
        action = ""
        method = "POST"
        form-change-status 
        data-path = `${prefixAdmin}/accounts/change-status/`
    )

    form(
        action = ""
        method = "POST"
        form-delete 
        data-path = `${prefixAdmin}/accounts/delete/`
    )
    script(src="/admin/JS/script.js") 
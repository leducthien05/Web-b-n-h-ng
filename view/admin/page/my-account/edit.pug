extends ../../layout/default.pug
include ../../mixin/alert.pug


block main 
    h1(class="mb-4") Trang chỉnh sửa thông tin
    +error("5000")
    +success("5000")

    form(
        action = `${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullname") Tên tài khoản
            input(
                type="text"
                class="form-control"
                id="fullname"
                name="fullname" 
                value = user.fullname  
            )
        
        div(class="form-group")
                label(for="desc") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    name="phone"
                    value=user.phone
                )
        div(class="form-group")
            label(for="email") Email
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"     
                value=user.email
            )
        div(class="form-group")
            label(for="password") Password
            input(
                type="text"
                class="form-control"
                id="password"
                name="password"
                
            )
        
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src = `${user.avatar}`
                class = "img-preview"
                upload-image-img
            )
        
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked = (user.status == "active" ? true : false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked = (user.status == "inactive" ? true : false)
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật



    script(src="/admin/JS/script.js") 


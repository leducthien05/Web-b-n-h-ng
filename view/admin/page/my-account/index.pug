extends ../../layout/default.pug


block main
    .card.mb-3
        .card-header Chi tiết sản phẩm
        .card-body
            .row
                .col-4
                    img(
                        src=user.avatar
                        alt=user.fullname
                        width="100%"
                        style="border-radius: 10px;"
                    )
                .col-5
                    h3 #{user.fullname}

                    

                    //- Thông tin
                    p(class = "mt-3")
                        strong Email: 
                        |  #{user.email}

                    p
                        strong Số điện thoai: 
                        |  #{user.phone}

                    p
                        strong Trạng thái:
                        - if (user.status === "active")
                            span(class="badge badge-success") Hoạt động
                        - else
                            span(class="badge badge-danger") Ngừng hoạt động

                    p
                        strong Phân quyền: 
                        |  !{role.title}

    //- Back button
    .mt-3
        
        a(
            href=`${prefixAdmin}/my-account/edit`
            class="btn btn-primary"
        ) Chỉnh sửa

extends ../../layout/default.pug
include ../../mixin/statusList.pug
include ../../mixin/search.product.pug

block main 
    .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
            .card-body
                .row
                    .col-6
                        +buttonStatus(filterStatus)
                    .col-6 
                        +search(keyword)

    .card.mb-3
        .card-header Danh sách 
            .card-body
                table(
                    class ="table.table-hover table-sm"
                    checkbox-multi
                ) 
                    thead 
                        tr 
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Giá
                            th Vị trí
                            th Trạng thái
                            th Hành động
                    tbody
                        each item, index in products
                            tr 
                                td #{index + 1}
                                td 
                                    img(
                                        src=item.image 
                                        alt=item.title
                                        hight= "auto"
                                        width = "100px"
                                    )
                                td #{item.title}
                                td #{item.price}
                                td #{item.position} 
                                td 
                                    if(item.status === "active")
                                        a(href="javascript:;"
                                            class="badge badge-success"
                                            change-status-multi
                                            status = item.status
                                            id = item.id
                                        ) Hoạt động
                                    else 
                                        a(href="javascript:;" 
                                            class="badge badge-danger"
                                            change-status-multi
                                            status = item.status
                                            id = item.id
                                        ) Dừng hoạt động
                                td 
                                    button(class="btn btn-warning btn-sm") Sửa
                                    button(class="btn btn-danger btn-sm ml-1") Xóa
    nav
        ul(class="pagination justify-content-center")
            - if(pagination.currentPage > 1)
                li(class=`page-item`)
                    button(
                        class="page-link"
                        number-page=`${pagination.currentPage - 1}`
                    ) Trang trước
            - for(var i = 1; i <= pagination.totalPage; i ++)
                li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                    button(
                        class="page-link"
                        number-page=`${i}`
                    ) #{i}
            - if(pagination.currentPage < pagination.totalPage)
                li(class=`page-item`)
                    button(
                        class="page-link"
                        number-page=`${pagination.currentPage + 1}`
                    ) Tiếp theo
    script(src="/admin/JS/script.js") 
                        
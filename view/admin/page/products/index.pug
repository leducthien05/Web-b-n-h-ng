extends ../../layout/default.pug
include ../../mixin/statusList.pug
include ../../mixin/search.pug
include ../../mixin/pagination.pug
include ../../mixin/form-change-multi.pug
include ../../mixin/alert.pug



block main 
    +success("5000")
                
    .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
            .card-body
                .row
                    if(role.permission.includes("products_edit"))
                        .col-6
                            +buttonStatus(filterStatus)
                    .col-6 
                        +search(keyword)
    .card.mb-3
        .card-header Sắp xếp
        .card-body
            .row
                .col-4
                    div(sort)
                        select(
                            class = "form-control",
                            name="sort"
                            sort-select
                        )
                            option(value="position-desc") Vị trí giảm dần
                            option(value="position-asc") Vị trí tăng dần
                            option(value="price-desc") Giá giảm dần
                            option(value="price-asc") Giá tăng dần
                            option(value="name-asc") Tiêu đề A - Z
                            option(value="name-desc") Tiêu đề Z - A
                        button(
                            class = "btn btn-danger mt-2",
                            sort-clear
                        ) Clear 
    .card.mb-3
        .card-header Danh sách 
            .card-body 
                .row
                    if(role.permission.includes("products_edit")) 
                        .col-8 
                            +change(`${prefixAdmin}/products/change-multi-status?_method=PATCH`)
                    if(role.permission.includes("products_create"))
                        .co-4 
                            a(
                                href=`${prefixAdmin}/products/create`
                                class="btn btn-outline-success"
                            ) +Thêm mới
            .card-body
                table(
                    class ="table table-hover table-sm"
                    checkbox-multi
                ) 
                    thead 
                        tr 
                            th 
                                input(
                                    type="checkbox"
                                    checkbox-all
                                )
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Giá
                            th Vị trí
                            th Trạng thái
                            th Hành động
                    tbody
                        each item, index in products
                            tr 
                                td 
                                    input(
                                        type="checkbox"
                                        value = item.id 
                                        checkbox-status
                                        name = "id"
                                    )
                                td #{index + 1}
                                td 
                                    img(
                                        src=item.image 
                                        alt=item.title
                                        hight= "auto"
                                        width = "100px"
                                    )
                                td #{item.title}
                                td #{item.price}
                                td 
                                    input(
                                        type="number"
                                        value = item.position 
                                        style="width: 60px"
                                        min = "1"
                                        name = "position"
                                    )
                                td 
                                    if(role.permission.includes("products_edit"))
                                        if(item.status === "active")
                                            a(href="javascript:;"
                                                class="badge badge-success"
                                                change-status
                                                status = item.status
                                                id = item.id
                                            ) Hoạt động
                                        else 
                                            a(href="javascript:;" 
                                                class="badge badge-danger"
                                                change-status
                                                status = item.status
                                                id = item.id
                                            ) Dừng hoạt động
                                td 
                                    if(role.permission.includes("products_edit"))
                                        a(
                                            href=`${prefixAdmin}/products/edit/${item.id}`
                                            class="btn btn-warning btn-sm"
                                            id = item.id 
                                            button-update
                                        ) Sửa
                                        a(
                                            href=`${prefixAdmin}/products/detail/${item.id}`
                                            class="btn btn-secondary btn-sm"
                                            id = item.id 
                                    ) Chi tiết
                                    if(role.permission.includes("products_edit"))
                                        button(
                                            class="btn btn-danger btn-sm ml-1"
                                            id = item.id 
                                            button-delete
                                        ) Xóa
        +pagination(pagination)
    form(
        action = ""
        method = "POST"
        form-change-status 
        data-path = `${prefixAdmin}/products/change-status/`
    )

    form(
        action = ""
        method = "POST"
        form-delete 
        data-path = `${prefixAdmin}/products/delete/`
    )
    script(src="/admin/JS/script.js") 
                        
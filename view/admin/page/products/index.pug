extends ../../layout/default.pug
include ../../mixin/statusList.pug
include ../../mixin/search.pug
include ../../mixin/pagination.pug
include ../../mixin/changeStatus.pug


block main 
    .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
            .card-body
                .row
                    .col-6
                        +buttonStatus(filterStatus)
                    .col-6 
                        +search(keyword)

    .card.mb-3
        .card-header Danh sách 
            .card-body 
                +change(`${prefixAdmin}/products/change-multi-status?_method=PATCH`)
            .card-body
                table(
                    class ="table.table-hover table-sm"
                    checkbox-multi
                ) 
                    thead 
                        tr 
                            th 
                                input(
                                    type="checkbox"
                                    checkbox-all
                                )
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Giá
                            th Vị trí
                            th Trạng thái
                            th Hành động
                    tbody
                        each item, index in products
                            tr 
                                td 
                                    input(
                                        type="checkbox"
                                        value = item.id 
                                        checkbox-status
                                        name = "id"
                                    )
                                td #{index + 1}
                                td 
                                    img(
                                        src=item.image 
                                        alt=item.title
                                        hight= "auto"
                                        width = "100px"
                                    )
                                td #{item.title}
                                td #{item.price}
                                td #{item.position} 
                                td 
                                    if(item.status === "active")
                                        a(href="javascript:;"
                                            class="badge badge-success"
                                            change-status
                                            status = item.status
                                            id = item.id
                                        ) Hoạt động
                                    else 
                                        a(href="javascript:;" 
                                            class="badge badge-danger"
                                            change-status
                                            status = item.status
                                            id = item.id
                                        ) Dừng hoạt động
                                td 
                                    button(class="btn btn-warning btn-sm") Sửa
                                    button(class="btn btn-danger btn-sm ml-1") Xóa
    +pagination(pagination)
    form(
        action = ""
        method = "POST"
        form-change-status 
        data-path = `${prefixAdmin}/products/change-status/`
    )
    script(src="/admin/JS/script.js") 
                        
    .card.mb-3
        .card-header Danh sách 
            .card-body 
                .row 
                    .col-8 
                        +change(`${prefixAdmin}/roles/change-multi-status?_method=PATCH`)
                    .co-4 
                        a(
                            href=`${prefixAdmin}/roles/create`
                            class="btn btn-outline-success"
                        ) +Thêm mới
            .card-body
                table(
                    class ="table table-hover table-sm"
                    checkbox-multi
                ) 
                    thead 
                        tr 
                            th 
                                input(
                                    type="checkbox"
                                    checkbox-all
                                )
                            th STT
                            th Tiêu đề
                            th Mô tả
                            th Trạng thái
                            th Hành động
                    tbody
                        each item, index in record
                            tr 
                                td 
                                    input(
                                        type="checkbox"
                                        value = item.id 
                                        checkbox-status
                                        name = "id"
                                    )
                                td #{index + 1} 
                                td #{item.title}
                                td #{item.description}
                                td 
                                    if(item.status === "active")
                                        a(href="javascript:;"
                                            class="badge badge-success"
                                            change-status
                                            status = item.status
                                            id = item.id
                                        ) Hoạt động
                                    else 
                                        a(href="javascript:;" 
                                            class="badge badge-danger"
                                            change-status
                                            status = item.status
                                            id = item.id
                                        ) Dừng hoạt động
                                td 
                                    a(
                                        href=`${prefixAdmin}/roles/edit/${item.id}`
                                        class="btn btn-warning btn-sm"
                                        id = item.id 
                                        button-update
                                    ) Sửa
                                    a(
                                        href=`${prefixAdmin}/roles/detail/${item.id}`
                                        class="btn btn-secondary btn-sm"
                                        id = item.id 
                                    ) Chi tiết
                                    button(
                                        class="btn btn-danger btn-sm ml-1"
                                        id = item.id 
                                        button-delete
                                    ) Xóa
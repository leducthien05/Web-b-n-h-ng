extends ../../layout/default.pug
include ../../mixin/box-head.pug

block main
    .container
        h1.title Đặt hàng thành công

        .alert-success
            | #{message}

        // ===== Thông tin cá nhân =====
        h2 Thông tin cá nhân
        table.info-table
            tr
                td Họ tên
            td
                strong= order.userInfo.fullName
            tr
                td Số điện thoại
            td
                strong= order.userInfo.phone
            tr
                td Địa chỉ
            td
                strong= order.userInfo.address

        // ===== Thông tin đơn hàng =====
        h2 Thông tin đơn hàng
        table.order-table
            thead
            tr
                th STT
                th Ảnh
                th Tên
                th Giá
                th Số lượng
                th Tổng tiền
            tbody
                each item, index in order.product
                    tr
                    td= index + 1
                    td
                        img(src=item.productInfo.image, alt=item.productInfo.title)
                    td= item.productInfo.title
                    td= item.price
                    td= item.quantity
                    td= item.sumPrice

        h3.total
            | Tổng đơn hàng:
            span= order.totalPrice